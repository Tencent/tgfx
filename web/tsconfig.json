{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "DOM", "DOM.Iterable"],
    "types": ["@webgpu/types", "@types/emscripten"],
    "target": "ES2020",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./lib",
    "baseUrl": ".", 
    "paths": {
      "@tgfx/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}