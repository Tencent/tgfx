{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "DOM", "DOM.Iterable", "WebWorker"],
    "types": ["@webgpu/types", "@types/emscripten"],
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "removeComments": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "baseUrl": ".", 
    "paths": {
      "@tgfx/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/tgfx.ts"]
}
